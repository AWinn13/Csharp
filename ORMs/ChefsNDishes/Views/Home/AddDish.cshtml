@{
    ViewData["Title"] = "Home Page";
}

@model Dish

<div class="container-fluid text-center">
    <div class="row">
        <h2>Add a New Dish</h2>
        <div class="d-flex justify-content-center w-25 mx-auto">
            <a href="/">Chefs</a>
            <span>|</span>
            <a href="/dishes">Dishes</a>
            <span>|</span>
            <a href="/chefs/new">Add a Chef</a>
            <span>|</span>
            <p>Add a Dish</p>
        </div>
    </div>
    <form asp-action="CreateDish" asp-controller="Home" method="post" class="w-75 mx-auto">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Name">Name of Dish</span>
                        <input asp-for="Name" class="form-control" type="text" id="Name">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Chef">Name of Chef</span>
                        <select asp-for="ChefId" class="form-control" type="text" id="Chef">
                            @foreach (Chef d in Model.AllChefs)
                            {
                            <option value="@d.ChefId">@d.FirstName</option>
                            }
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Calories">Calories</span>
                        <input asp-for="Calories" class="form-control" type="number" id="Calories">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text" for="Tastiness">Tastiness</span>
                        <select asp-for="Tastiness" class="form-control" type="text" id="Tastiness">
                            <option selected>Select A Level of Tastiness </option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-success mx-auto" type="submit">Submit</button>
            </div>
        </div>
    </form>
        
    
    <span class="text-danger" asp-validation-for="Name"></span>
    <br>
    <span class="text-danger" asp-validation-for="Calories"></span>
    <br>
    <span class="text-danger" asp-validation-for="Tastiness"></span>
    <br>
    <span class="text-danger" asp-validation-for="Chef"></span>
</div>