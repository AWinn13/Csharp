@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>


<div class="text-center">
    <div class="d-flex justify-content-evenly">
        <p>Chefs</p>
        <span>|</span>
        <a href="/dishes">Dishes</a>
        <span>|</span>
        <a href="/chefs/new">Add a Chef</a>
        <span>|</span>
        <a href="/dishes/new">Add a Dish</a>
    </div>
    <h3>Take a look at these Chefs</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            
                @foreach (Chef c in Model)
                {
                    <tr>
                        <td>@c.FirstName @c.LastName</td>
                        @{
                            DateTime CurrentYear = DateTime.Now;
                            int OnlyYear = CurrentYear.Year;
                            int Age = OnlyYear - c.DateOfBirth.Year;
                        }
                        <td>@Age</td>
                        <td>@c.AllDishes.Count</td>
                    </tr>
                }
            
        </tbody>
    </table>
</div>
