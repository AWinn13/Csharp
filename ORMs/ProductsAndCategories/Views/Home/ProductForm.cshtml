
@model Product

<div class="form-floating mb-3 border shadow-sm">
    <input class="form-control" type="text" id="Name" placeholder="Name" asp-for="Name">
    <label for="Name">Name</label>
</div>
<div class="form-floating mb-3 border shadow-sm">
    <input asp-for="Description" class="form-control" type="text" id="Description" placeholder="Description">
    <label for="Description">Description</label>
</div>
<div class="form-floating mb-3 border shadow-sm">
    <input asp-for="Price" class="form-control" type="number" id="Price" placeholder="Price">
    <label for="Price">Price</label>
</div>
<button class="btn btn-outline-dark">Submit</button>